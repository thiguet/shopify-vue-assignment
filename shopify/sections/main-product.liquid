{% assign current_variant = product.selected_or_first_available_variant %}
{% assign featured_image = current_variant.featured_image | default: product.featured_image %}

<div class="container max-w-screen-xl grid md:grid-cols-2 gap-8">
  
  <div class="sm:hidden">
    {% if product.title %}
      <h1 class="text-2xl text-primary lg:text-3xl font-bold mb-0 md:mb-8">
        {{ product.title }}
      </h1>
    {% endif %}
    
    <div class="flex items-center gap-3 py-2">
      {% if section.settings.enable_star_rating %}
        <div class="flex">
          {% assign rating = product.metafields.custom.star_rating %}
          {% for i in (1..5) %}
            <div class="h-5 w-5 mr-1 jump">
              {% if i <= rating %}
                {% render 'icon-star.liquid' %}
              {% else %}
                {% render 'icon-star-line.liquid' %}
            {% endif %}
            </div>
          {% endfor %}
        </div>
        <span class="text-line underline underline-offset-2">150 Reviews</span>
      </div>
    {% endif %}

      

    {% if current_variant.available %}
        <div class="flex gap-3">
          <span class="inline-block text-lg {% if current_variant.compare_at_price %}text-primary{% endif %} font-semibold">
            {{ current_variant.price | money }}
          </span>

          {% if current_variant.compare_at_price %}
            <del class="text-lg text-primary opacity-60 font-semibold">
              {{ current_variant.compare_at_price | money }}
            </del>

            {% assign ratio = current_variant.price | times: 100 | divided_by: current_variant.compare_at_price %}
            {% assign discount = 100 | minus: ratio %}

            <div class="bg-secondary flex items-center h-8 text-primary text-sm tracking-wider uppercase px-2 py-1">
              {{- discount -}} 
              {{- 'common.sale' | t -}} 
            </div>
          {% endif %}
        </div>
    {% else %}
      <div class="mb-6">
        {{ 'common.sold_out' | t }}
      </div>
    {% endif %}

  
  </div>
  
  <renderless-simple-slider slider-class="slider" slider-container-class="slider-container" v-slot="{ slideNext, slidePrev, activeSlider }" >
    <div class="slider relative">
      <div class="slider-container scroll-smooth gap-0 flex flex-nowrap overflow-scroll">
        <img
          alt="{{ featured_image.alt | escape }}"
          srcset="{{ featured_image | img_url: '750x' }}"
          sizes="100vw"
          loading="lazy"
          class="w-full h-auto object-cover object-center"
        >
        {% for image in product.images %}
          {% if image.id != featured_image.id %}
            <img
              srcset="{{ image | img_url: '750x' }}"
              sizes="100vw"
              alt="{{ image.alt | escape }}"
              loading="lazy"
              class="w-full h-auto object-cover object-center"
            >
          {% endif %}
        
        {% endfor %}
      </div>
      
      <div class="pagination flex gap-4 py-2">
        {% for image in product.images %}
          <span data-index="{{ forloop.index0 }}" class="bubble {% if forloop.index0 == 0 %}active {% endif %}h-3 w-3 rounded-full"></span>
        {% endfor %}
      </div>

      <button @click="slidePrev" type="button" class="slider-prev absolute top-1/2 -translate-y-1/2 -left-2 py-4 px-3" aria-label="show previous image"> {% render 'icon-chevron-left'%}</button>
      <button @click="slideNext" type="button" class="slider-next absolute top-1/2 -translate-y-1/2 -right-2 py-4 px-3" aria-label="show next image"> {% render 'icon-chevron-right'%}</button>

    </div>
  </renderless-simple-slider>

  <div class="md:mt-12">
    
    {% form 'product', product %}
      <div class="flex items-end gap-4 mb-6">
        {% if current_variant.available %}
          <input
            type="number"
            name="quantity"
            value="1"
            min="1"
            pattern="[0-9]*"
            class="w-16"
          >
        {% endif %}

        {% if product.has_only_default_variant %}
          <input
            name="id"
            type="hidden"
            :value="{{ current_variant.id }}"
            readonly
          >
        {% else %}
          <div class="flex-1">
            <renderless-product-variant-selector
              v-slot="{ selectedVariant, selectOption }"
              :current-variant="{{ current_variant | json | replace: '"', "'" }}"
              :product-options="{{ product.options_with_values | json | replace: '"', "'" }}"
              :product-variants="{{ product.variants | json | replace: '"', "'" }}"
            >
              <div>
                <input
                  name="id"
                  type="hidden"
                  :value="selectedVariant.id"
                  readonly
                >

                <div class="flex gap-x-3">
                  {% for option in product.options_with_values %}
                    <div class="flex-1">
                      <label for="product-select-option-{{ forloop.index }}">
                        {{ option.name | escape }}
                      </label>

                      <select
                        id="product-select-{{ forloop.index }}"
                        class="w-full h-12 border p-2"
                        @change="selectOption({
                          name: '{{ option.name }}'
                        }, $event)"
                      >
                        {% for value in option.values %}
                          <option
                            value="{{ value }}"
                            {% if option.selected_value == value %}selected{% endif %}
                          >
                            {{ value | escape }}
                          </option>
                        {% endfor %}
                      </select>
                    </div>
                  {% endfor %}
                </div>
              </div>
            </renderless-product-variant-selector>
          </div>
        {% endif %}
      </div>

      {% if current_variant.available %}
        <div class="grid grid-cols-2 gap-4">
          <div class="button-shopify-buy-it-now">
            {{ form | payment_button }}
          </div>

          <div>
            <button name="add" class="button button-secondary w-full h-12">
              {{ 'action.add_to_cart' | t }}
            </button>
          </div>
        </div>
      {% endif %}
    {% endform %}

    {% if product.description %}
      <div class="mt-4">
        {{ product.description }}
      </div>
    {% endif %}
  </div>
</div>


{% schema %}
{
  "name": "t:sections.main-product.name",
  "class": "shopify-section-vue",
  "settings": [
    {
      "type": "checkbox",
      "id": "enable_star_rating",
      "label": "t:sections.main-product.settings.enable_star_rating",
      "default": true
    }
  ]
}
{% endschema %}